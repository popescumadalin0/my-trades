@page "/strategies/edit/{Id:guid}"
@using MyTrades.Client.Models

<PageTitle>Edit Strategy</PageTitle>

@if (_strategy == null)
{
    <MudText>Strategy not found</MudText>
}
else
{
    <MudText Typo="Typo.h5">Editing @_strategy.Name</MudText>
    <MudTextField @bind-Value="_strategy.Name" Label="Name" />
    <MudNumericField @bind-Value="_strategy.WinRate" Label="Win rate" />
    <MudNumericField @bind-Value="_strategy.TradesCount" Label="Trades count" />
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Save">Save</MudButton>
}